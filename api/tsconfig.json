{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "include": ["**/*.ts", "**/*.tsx", "*.d.ts"],
  "exclude": ["node_modules", "dist/*"]
}
